mixin header-nav-items(items)
    .header-nav-items
        .header-nav-items__wrap
            each item in items
                a(href='#').header-nav-items__item= item

mixin numbers-projects-project(amount)
    - for(var i = 1; i <= amount; i++)
        .numbers-projects-project
            .numbers-projects-project__wrap
                +add-svg('numbers-projects-project__image', 'icon-project')
                .numbers-projects-project__text проектов
                    span.numbers-projects-project__number 40+

mixin my-skills-skills(items)
    .my-skills-skills
        .my-skills-skills__wrap
            .my-skills-skills__title мои навыки
            each item in items
                .my-skills-skills__skill= item
                .my-skills-skills__exp
                    span.my-skills-skills__exp-percent

mixin add-svg(name_class, name_icon)
    svg(class='' + name_class)
        use(xlink:href='img/svg/symbol/svg/sprite.symbol.svg#' + name_icon)

mixin my-project-project(amount)
    - for(var i = 1; i <= amount; i++)
        .my-projects-project.my-projects-project__wrap
            if i === 0 || i === 2
                img(src='img/project-1.jpg' alt='изображение проекта').my-projects-project__image
                .my-projects-project__block
                    +add-svg('my-projects-project__icon', 'icon-eye')
            else if i > 3
                if i === 4 || i === 6
                    img(src='img/project-2.jpg' alt='изображение проекта').my-projects-project__image
                    .my-projects-project__block
                        +add-svg('my-projects-project__icon', 'icon-eye')
                else
                    img(src='img/project-1.jpg' alt='изображение проекта').my-projects-project__image
                    .my-projects-project__block
                        +add-svg('my-projects-project__icon', 'icon-eye')
            else
                img(src='img/project-2.jpg' alt='изображение проекта').my-projects-project__image
                .my-projects-project__block
                    +add-svg('my-projects-project__icon', 'icon-eye')

mixin clients-client(amount)
    - for(var i = 1; i <= amount; i++)
        .clients-client
            .clients-client__wrap
                .clients-client__image

mixin footer-social(amount)
    - for(var i = 1; i <= amount; i++)
        +add-svg('footer-socials__icon-social', 'icon-social')